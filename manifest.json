{
	"version": "0.40",
	"manifest_version": 2,
	"name": "Highlight All",
	"description": "Double click a word to highlight all occurrences.",

	"update_url": "http://clients2.google.com/service/update2/crx",
	"background": {
		"scripts": ["js/background.js"]
	},

	"browser_action": 
	{
		"all_frames": true,
		"default_icon": "img/hl_16.png",
		"default_title": "Settings",
		"default_popup": "htm/popup.htm"
	},
   
	"content_scripts": 	
	[{
		"js": [ "js/colorgen.js", "js/select.js"],
		"matches": [ "\u003Call_urls\u003E" ],
		"run_at": "document_end"
	}],
	
	"icons": 
	{
		"128": "img/hl_128.png",
		"16": "img/hl_16.png",
		"32": "img/hl_32.png",
		"48": "img/hl_48.png"
	},

	"permissions": 
	[ 
		"contextMenus", 
		"tabs",
		"http://*/*", 
		"https://*/*"
	]
}
